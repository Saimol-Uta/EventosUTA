---
import "../styles/ModalDetallesEvento.css";
---

<div id="modalDetallesReserva" class="modal">
  <div class="modal-contenido">
    <span class="cerrar" onclick="cerrarModalDetalles()">&times;</span>
    <div class="detalles-reserva">
      <h2>Nombre del Evento</h2>

      <div class="seccion-detalles centrar">
        <img
          class="imagen-curso"
          src="https://i0.wp.com/niaxus.com/wp-content/uploads/2025/02/vrchyzq6javascript_1705438000.png"
          alt="imagen curso"
        />
        <div class="descripcion-completa-container">
          <p class="descripcion-completa"><strong>Descripción:</strong> <span id="cliente-cedula"></span></p>
        </div>
      </div>

      <div class="seccion-detalles">
        <h3>Información General</h3>
        <div class="info-grid">
          <p><strong>Categoría:</strong> <span id="cliente-telefono"></span></p>
          <p><strong>Área:</strong> <span id="cliente-telefono"></span></p>
          <p>
            <strong>Asignación:</strong>
            <span id="cliente-telefono"></span>
          </p>
        </div>
      </div>

      <div class="seccion-detalles">
        <h3>Programación</h3>
        <div class="info-grid">
          <p>
            <strong>Fecha de Inicio:</strong>
            <span id="vehiculo-info"></span>
          </p>
          <p>
            <strong>Hora de Inicio:</strong>
            <span id="vehiculo-info"></span>
          </p>
          <p><strong>Fecha de Fin:</strong> <span id="vehiculo-tipo"></span></p>
          <p><strong>Hora de Fin:</strong> <span id="vehiculo-info"></span></p>
          <p>
            <strong>Duración:</strong>
            <span id="vehiculo-transmision"></span>
          </p>
          <p>
            <strong>Ubicación:</strong>
            <span id="vehiculo-combustible"></span>
          </p>
        </div>
      </div>

      <div class="seccion-detalles">
        <h3>Organizador</h3>
        <div class="info-grid">
          <p><strong>Cédula:</strong> <span id="reserva-inicio"></span></p>
          <p><strong>Nombre:</strong> <span id="reserva-fin"></span></p>
          <p>
            <strong>Título Académico:</strong>
            <span id="reserva-estado"></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  declare global {
    interface Window {
      cerrarModalDetalles: () => void;
      abrirModalDetalles: () => void;
    }
  }

  function cerrarModalDetalles() {
    const modal = document.getElementById("modalDetallesReserva");
    if (modal) modal.style.display = "none";
  }

  function abrirModalDetalles() {
    const modal = document.getElementById("modalDetallesReserva");
    if (modal) modal.style.display = "block";
  }

  window.onclick = function (event) {
    const modal = document.getElementById("modalDetallesReserva");
    if (event.target === modal) cerrarModalDetalles();
  };

  window.cerrarModalDetalles = cerrarModalDetalles;
  window.abrirModalDetalles = abrirModalDetalles;
</script>
