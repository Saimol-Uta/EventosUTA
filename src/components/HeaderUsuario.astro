---
import Menu from '../components/ComponenteMenuConfiguraciones.astro';
import "../styles/global.css";

export interface Props {
  nombreUsuario: string;
  userImage: string;
}

const { nombreUsuario, userImage } = Astro.props;
---

<header class="flex justify-between items-center p-4 bg-white border-b border-gray-300 flex-wrap font-sans">
  <!-- Logo -->
  <div class="flex items-center min-w-[250px]">
    <a href="/">
      <img
        src="/img/logoFisei.png"
        alt="Facultad de Ingeniería en Sistemas, Electrónica e Industrial"
        class="max-h-20 w-auto"
      />
    </a>
  </div>

  <!-- Menú derecho -->
  <div class="flex items-center gap-6 justify-end flex-wrap min-w-[250px]">
    <a href="/buscarCertificado" class="flex items-center gap-2 text-[15px] font-medium text-[#660000] hover:text-[#a00000] transition-colors duration-300 no-underline select-none">
      <!-- Icono -->
      <svg class="w-8 h-auto transform -scale-y-100 fill-[#ad272e] pointer-events-none" viewBox="0 0 1710 1770" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid meet">
        <g fill="#ad272e" stroke="none">
          <path d="M818 1624..."></path>
          <path d="M500 673..."></path>
        </g>
      </svg>
      <span class="select-none">Verifica tu certificado</span>
    </a>

    <!-- Menú personalizado -->
    <Menu userName={nombreUsuario} userImage={userImage} />
  </div>
</header>
