---
const { evento, formatearFecha, formatearDuracion, inscripcionDisponible, inscripcionProximamente, slug } = Astro.props;
---

<div class="max-w-6xl mx-auto rounded-3xl overflow-hidden shadow-2xl bg-white animate-fade-in">
  <!-- Hero -->
  <div class="relative h-[360px] bg-center bg-cover" style={`background-image: url('${evento.img_eve}')`}>
    <div class="absolute inset-0 bg-black/70 backdrop-blur-sm flex items-end p-10">
      <div>
        <h1 class="text-white text-4xl md:text-5xl font-extrabold drop-shadow-md">{evento.nom_eve}</h1>
        <p class="text-white/70 text-sm mt-2 tracking-wide">{evento.categorias_eventos.nom_cat}</p>
      </div>
    </div>
  </div>

  <!-- Contenido general -->
  <div class="p-10 space-y-10 bg-white">

    <!-- Descripción -->
    <section class="border-l-4 border-red-800 pl-6 py-4 bg-gray-50 rounded-xl shadow-sm">
      <h2 class="text-2xl font-semibold text-red-800 mb-2">¿De qué trata este curso?</h2>
      <p class="text-gray-700 leading-relaxed text-[17px]">{evento.des_eve}</p>
    </section>

    <!-- Detalles -->
    <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="flex items-start gap-4 p-5 bg-gray-50 rounded-xl shadow-md border-l-4 border-red-800">
        <svg class="w-6 h-6 text-red-800 mt-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3M16 7V3M3 11h18M5 19h14a2 2 0 002-2v-5H3v5a2 2 0 002 2z"/>
        </svg>
        <div>
          <p class="text-sm text-gray-500">Fechas</p>
          <p class="font-medium">{formatearFecha(evento.fec_ini_eve)} – {formatearFecha(evento.fec_fin_eve)}</p>
        </div>
      </div>

      <div class="flex items-start gap-4 p-5 bg-gray-50 rounded-xl shadow-md border-l-4 border-red-800">
        <svg class="w-6 h-6 text-red-800 mt-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-4-4h-1M3 20h5v-2a4 4 0 00-4-4H3m4-6h8m-4 4v-4m0 0H5.5M9 4h6a2 2 0 012 2v4a2 2 0 01-2 2H9a2 2 0 01-2-2V6a2 2 0 012-2z" />
        </svg>
        <div>
          <p class="text-sm text-gray-500">Duración</p>
          <p class="font-medium">{evento.dur_eve ? formatearDuracion(evento.dur_eve) : "No especificada"}</p>
        </div>
      </div>

      <div class="flex items-start gap-4 p-5 bg-gray-50 rounded-xl shadow-md border-l-4 border-red-800">
        <svg class="w-6 h-6 text-red-800 mt-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.343 3-3S13.657 5 12 5s-3 1.343-3 3 1.343 3 3 3z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11v10"/>
        </svg>
        <div>
          <p class="text-sm text-gray-500">Ubicación</p>
          <p class="font-medium">{evento.ubi_eve || "Por confirmar"}</p>
        </div>
      </div>
    </section>

    <!-- Organizador -->
    <section class="bg-white shadow-md rounded-xl p-6 border-l-4 border-red-800">
      <h3 class="text-lg text-red-800 font-semibold mb-2">Organizado por</h3>
      <p class="text-gray-700 leading-snug">
        {evento.organizadores.tit_aca_org} {evento.organizadores.nom_org1}
        {evento.organizadores.nom_org2 && ` ${evento.organizadores.nom_org2}`} {evento.organizadores.ape_org1}
        {evento.organizadores.ape_org2 && ` ${evento.organizadores.ape_org2}`}
      </p>
    </section>

    <!-- Dirigido a -->
    {evento.asignaciones && (
      <section class="bg-white border-l-4 border-red-800 shadow-md p-6 rounded-xl">
        <h3 class="text-lg font-semibold text-red-800 mb-2">Dirigido a</h3>
        <p class="text-gray-700 mb-2">
          <strong>{evento.asignaciones.nom_asi}</strong>: {evento.asignaciones.des_asi}
        </p>
        {evento.asignaciones.detalle_asignaciones?.length > 0 && (
          <ul class="grid grid-cols-2 gap-2 list-disc list-inside text-gray-600">
            {evento.asignaciones.detalle_asignaciones.map((detalle: any) => (
              <li>{detalle.carreras.nom_car}</li>
            ))}
          </ul>
        )}
      </section>
    )}

    <!-- Precio -->
    <section class="bg-gradient-to-br from-green-100 via-white to-green-50 border-l-4 border-green-600 p-6 rounded-xl shadow-md flex items-center justify-between">
      <div class="flex items-center gap-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2-1.343-2-3-2zm0 4v4m0-4c-1.657 0-3 .895-3 2m3-2c1.657 0 3 .895 3 2M12 4v4" />
        </svg>
        <div>
          <p class="text-sm text-gray-500">Precio del curso</p>
          <p class="text-2xl font-bold text-green-800">
            {Number(evento.precio) === 0 ? "Gratuito" : `$${Number(evento.precio).toFixed(2)}`}
          </p>
        </div>
      </div>
      {Number(evento.precio) === 0 && (
        <span class="bg-green-700 text-white text-xs font-semibold px-4 py-1 rounded-full">ACCESO LIBRE</span>
      )}
    </section>

    <!-- Inscripción -->
    <div class="text-center mt-6">
      {
        inscripcionDisponible() ? (
          <a href={`/Eventos/Evento-Inscripcion/${slug}`}
            class="inline-block bg-red-800 hover:bg-red-900 text-white py-3 px-8 rounded-xl text-lg font-semibold transition-all duration-300 shadow-lg hover:scale-105">
            Registrarme ahora
          </a>
        ) : inscripcionProximamente() ? (
          <p class="text-red-800 text-lg font-semibold">
            Inscripciones desde: <br />
            <span class="text-black font-normal">{formatearFecha(evento.fec_ini_ins_eve)}</span>
          </p>
        ) : (
          <p class="text-red-800 text-lg font-semibold">
            Fecha límite superada para inscribirse
          </p>
        )
      }
    </div>
  </div>
</div>

<style>
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  @keyframes fadeIn {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
</style>

