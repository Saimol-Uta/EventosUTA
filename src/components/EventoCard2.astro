---
import "../styles/global.css";

const {
  imagen,
  titulo,
  resumen,
  minutos,
  slug,
  precio,
  fechaIni,
  modoAdmin = false,
  idEvento,
  esDestacado = false,
  estado,
} = Astro.props;

// Definir el tipo de datos esperado para 'minutos' (número)
const formatearDuracion = (minutos: number): string => {
  if (minutos < 60) {
    return `${minutos} minutos`;
  } else if (minutos < 1440) {
    const horas = Math.floor(minutos / 60);
    const minutosRestantes = minutos % 60;
    return minutosRestantes > 0
      ? `${horas}h ${minutosRestantes}m`
      : `${horas} horas`;
  } else {
    const dias = Math.floor(minutos / 1440);
    const horasRestantes = Math.floor((minutos % 1440) / 60);
    return horasRestantes > 0
      ? `${dias} días ${horasRestantes}h`
      : `${dias} días`;
  }
};

// Definir el tipo de datos esperado para 'fecha' (string | Date | null | undefined)
const formatearFecha = (fecha?: string | Date | null): string => {
  if (!fecha) return "Fecha no disponible";

  const date = typeof fecha === "string" ? new Date(fecha) : fecha;

  if (!(date instanceof Date) || isNaN(date.getTime())) return "Fecha inválida";

  return date.toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<div class="card-evento" data-titulo={titulo.toLowerCase()}>
  {modoAdmin && (
    <button
      class={`destacar-boton ${esDestacado ? "activo" : ""}`}
      data-id={idEvento}
      onclick="toggleFavorito(this)"
      title="Marcar como destacado"
      type="button"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
      </svg>
    </button>
  )}

  <a href={`/Eventos/${slug}`} class="link-tarjeta">
    <img
      class="card-img"
      src={imagen || "/img/logo-fisei.png"}
      alt="Imagen del evento"
    />
    <div class="info-overlay">
      {estado && <div class="estado-badge">{estado}</div>}
      <h3 class="titulo">{titulo}</h3>
      <p class="resumen">{resumen}</p>

      <div class="etiquetas-footer">
        <div class="contenedor-etiquetas">
          <span class="etiqueta horas">{formatearDuracion(minutos)}</span>
          {precio === 0 || precio === null || precio === undefined ? (
            <span class="etiqueta gratis">Gratis</span>
          ) : (
            <span class="etiqueta precio">${precio.toFixed(2)}</span>
          )}
        </div>
        <div class="fecha-ini">Inicia el {formatearFecha(fechaIni)}</div>
      </div>
    </div>
  </a>
</div>

<style>
  .card-evento {
    position: relative;
    width: 100%;
    max-width: 460px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .card-evento:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .destacar-boton {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    padding: 5px;
    cursor: pointer;
    transition: background 0.3s ease;
    z-index: 5;
  }

  .destacar-boton.activo {
    background: yellow;
    color: #555;
  }

  .card-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .info-overlay {
    padding: 15px;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .estado-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    padding: 5px 10px;
    font-size: 12px;
    font-weight: bold;
    color: white;
    background-color: green;
    border-radius: 5px;
    z-index: 2;
  }

  .titulo {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin: 0;
  }

  .resumen {
    font-size: 14px;
    color: #666;
    margin: 0;
    line-height: 1.4;
  }

  .etiquetas-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .contenedor-etiquetas {
    display: flex;
    gap: 10px;
  }

  .etiqueta {
    font-size: 12px;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
  }

  .etiqueta.horas {
    background: #f0f0f0;
    color: #555;
  }

  .etiqueta.gratis {
    background: #e0ffe0;
    color: #008000;
  }

  .etiqueta.precio {
    background: #ffe0e0;
    color: #800000;
  }

  .fecha-ini {
    font-size: 12px;
    color: #888;
  }
</style>
