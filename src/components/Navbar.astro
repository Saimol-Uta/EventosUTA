---
const { isAdmin, isMaster } = Astro.locals;
---

<nav class="flex flex-wrap items-center justify-start gap-4 px-6 py-3 bg-white border-y border-gray-300 font-sans">
  <a
    href="/"
    class="relative text-red-800 text-sm font-semibold tracking-wide transition-colors duration-200 drop-shadow-sm before:content-[''] before:absolute before:left-0 before:-bottom-0.5 before:h-[2px] before:w-0 before:bg-red-800 before:transition-all before:duration-300 hover:before:w-full"
  >
    Inicio
  </a>

  <a
    href="/cursosCompleto"
    class="relative text-red-800 text-sm font-semibold tracking-wide transition-colors duration-200 drop-shadow-sm before:content-[''] before:absolute before:left-0 before:-bottom-0.5 before:h-[2px] before:w-0 before:bg-red-800 before:transition-all before:duration-300 hover:before:w-full"
  >
    Eventos
  </a>

  {
    isAdmin && (
      <a
        href="/homeAdmin"
        class="ml-auto bg-gradient-to-r from-red-800 to-red-600 text-white text-sm font-bold px-4 py-2 rounded-lg shadow-md hover:shadow-lg hover:scale-105 transition-all duration-300 animate-pulse"
      >
        Panel Admin
      </a>
    )
  }
  {
    isMaster && (
      <a
        href="/homeAdmin"
        class="ml-auto bg-gradient-to-r from-red-800 to-red-600 text-white text-sm font-bold px-4 py-2 rounded-lg shadow-md hover:shadow-lg hover:scale-105 transition-all duration-300 animate-pulse"
      >
        Panel Master
      </a>
    )
  }
</nav>
