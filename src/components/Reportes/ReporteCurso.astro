---
interface Participante {
  nombre: string;
  cedula: string;
  fecha: string;
  asistencia: number;
  nota: number | null;
}

// 1. Verifica si Astro.props existe y contiene participantes
const props = Astro.props as Partial<{ participantes: Participante[] }>;
const participantes: Participante[] = props.participantes ?? [];
---


<section>
  <h2>Reporte de Participantes con Calificación</h2>
  <button id="btn-descargar-reporte">Descargar PDF</button>

  <table id="tablaCurso">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cédula</th>
        <th>Fecha de Inscripción</th>
        <th>Asistencia (%)</th>
        <th>Nota</th>
      </tr>
    </thead>
    <tbody>
      {participantes.map((p) => (
        <tr>
          <td>{p.nombre}</td>
          <td>{p.cedula}</td>
          <td>{p.fecha}</td>
          <td>{p.asistencia}</td>
          <td>{p.nota}</td>
        </tr>
      ))}
    </tbody>
  </table>
  <script type="module" src="/public/js/reporteCurso.js"></script>
</section>



