---
const {
  campoTexto1 = "Nombre completo",
  campoTexto2 = "Correo electrónico",
  campoTexto3 = "Teléfono",

  popupTitulo1 = "Seleccione un país",
  opcionesPopup1 = ["Ecuador", "Colombia", "Perú"],

  popupTitulo2 = "Seleccione un idioma",
  opcionesPopup2 = ["Español", "Inglés", "Francés"],

  campoArchivo = "Suba su documento",
} = Astro.props;
---

<body class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
  <form class="w-full max-w-2xl space-y-8">
    <h1 class="text-4xl font-bold text-purple-600 text-center mb-8">Formulario</h1>

    <!-- Campo de texto 1 -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="campo1" class="block text-gray-800 font-semibold mb-3 text-lg">{campoTexto1}</label>
      <input
        id="campo1"
        type="text"
        name="campo1"
        required
        placeholder={campoTexto1}
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
               focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent
               shadow-sm transition"
      />
    </div>

    <!-- Campo de texto 2 -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="campo2" class="block text-gray-800 font-semibold mb-3 text-lg">{campoTexto2}</label>
      <input
        id="campo2"
        type="text"
        name="campo2"
        required
        placeholder={campoTexto2}
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
               focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent
               shadow-sm transition"
      />
    </div>

    <!-- Campo de texto 3 -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="campo3" class="block text-gray-800 font-semibold mb-3 text-lg">{campoTexto3}</label>
      <input
        id="campo3"
        type="text"
        name="campo3"
        required
        placeholder={campoTexto3}
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
               focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent
               shadow-sm transition"
      />
    </div>

    <!-- Popup menú 1 -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="popup1" class="block text-gray-800 font-semibold mb-3 text-lg">{popupTitulo1}</label>
      <select
        id="popup1"
        name="popup1"
        required
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
               focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent
               shadow-sm transition cursor-pointer"
      >
        <option value="" disabled selected class="text-gray-400">
          Seleccione una opción
        </option>
        {opcionesPopup1.map((opcion) => (
          <option value={opcion} class="text-gray-900">{opcion}</option>
        ))}
      </select>
    </div>

    <!-- Popup menú 2 -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="popup2" class="block text-gray-800 font-semibold mb-3 text-lg">{popupTitulo2}</label>
      <select
        id="popup2"
        name="popup2"
        required
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
               focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent
               shadow-sm transition cursor-pointer"
      >
        <option value="" disabled selected class="text-gray-400">
          Seleccione una opción
        </option>
        {opcionesPopup2.map((opcion) => (
          <option value={opcion} class="text-gray-900">{opcion}</option>
        ))}
      </select>
    </div>

    <!-- Subir archivo -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <label for="archivo" class="block text-gray-800 font-semibold mb-3 text-lg">{campoArchivo}</label>
      <input
        id="archivo"
        type="file"
        name="archivo"
        accept=".pdf,.jpg,.png"
        required
        class="block w-full text-gray-600
               file:mr-4 file:py-2 file:px-4
               file:rounded-lg file:border-0
               file:text-sm file:font-semibold
               file:bg-purple-600 file:text-white
               hover:file:bg-purple-700
               cursor-pointer
               transition"
      />
    </div>

    <!-- Botón enviar -->
    <div class="text-center">
      <button
        type="submit"
        class="bg-purple-600 text-white px-10 py-3 rounded-xl
               hover:bg-purple-700 transition-colors font-semibold text-lg shadow-md"
      >
        Enviar
      </button>
    </div>
  </form>
</body>
