    // Función para mostrar información de categoría
    function mostrarInformacionCategoria(categoriaData: any) {
        const seccionInfoCategoria = document.getElementById(
            "seccion-info-categoria",
        ) as HTMLElement;
        const infoPuntajeDetalle = document.getElementById(
            "info-puntaje-detalle",
        ) as HTMLElement;
        const infoAsistenciaDetalle = document.getElementById(
            "info-asistencia-detalle",
        ) as HTMLElement;
        const infoCertificadoDetalle = document.getElementById(
            "info-certificado-detalle",
        ) as HTMLElement;
        const valorPuntajeDetalle = document.getElementById(
            "valor-puntaje-detalle",
        ) as HTMLElement;
        const valorPorcentajeAsistenciaDetalle = document.getElementById(
            "valor-porcentaje-asistencia-detalle",
        ) as HTMLElement;

        if (!categoriaData) {
            if (seccionInfoCategoria)
                seccionInfoCategoria.style.display = "none";
            return;
        }

        // Obtener datos de la categoría
        const puntajeApr = categoriaData.pun_apr_cat;
        const porcentajeAsistencia = categoriaData.asi_cat;
        const requierePuntaje = categoriaData.requiere_puntaje === true;
        const requiereAsistencia = categoriaData.requiere_asistencia === true;
        const brindaCertificado = categoriaData.brinda_certificado === true;

        // Verificar si hay alguna información para mostrar
        const tieneInfoPuntaje = requierePuntaje && puntajeApr;
        const tieneInfoAsistencia = requiereAsistencia;
        const tieneInfoCertificado = brindaCertificado;

        const hayInformacion =
            tieneInfoPuntaje || tieneInfoAsistencia || tieneInfoCertificado;

        // Solo mostrar el contenedor si hay información que mostrar
        if (seccionInfoCategoria) {
            if (hayInformacion) {
                seccionInfoCategoria.style.display = "block";

                // Mostrar/ocultar información según los atributos
                if (infoPuntajeDetalle && valorPuntajeDetalle) {
                    if (tieneInfoPuntaje) {
                        infoPuntajeDetalle.style.display = "block";
                        valorPuntajeDetalle.textContent = puntajeApr;
                    } else {
                        infoPuntajeDetalle.style.display = "none";
                    }
                }

                if (infoAsistenciaDetalle && valorPorcentajeAsistenciaDetalle) {
                    if (tieneInfoAsistencia) {
                        infoAsistenciaDetalle.style.display = "block";
                        // Mostrar el porcentaje de asistencia si está disponible, sino un valor por defecto
                        valorPorcentajeAsistenciaDetalle.textContent =
                            porcentajeAsistencia || "80";
                    } else {
                        infoAsistenciaDetalle.style.display = "none";
                    }
                }

                if (infoCertificadoDetalle) {
                    if (tieneInfoCertificado) {
                        infoCertificadoDetalle.style.display = "block";
                    } else {
                        infoCertificadoDetalle.style.display = "none";
                    }
                }
            } else {
                // Si no hay información, ocultar todo el contenedor
                seccionInfoCategoria.style.display = "none";
            }
        }

        console.log("📊 Información de categoría en detalles actualizada:", {
            requierePuntaje,
            requiereAsistencia,
            brindaCertificado,
            puntajeApr,
            porcentajeAsistencia,
            hayInformacion,
            tieneInfoPuntaje,
            tieneInfoAsistencia,
            tieneInfoCertificado,
        });
    }

    // Función para expandir imagen
    function expandirImagen(img: HTMLImageElement) {
        if (!img.src || img.src.includes("placeholder")) return;

        const overlay = document.createElement("div");
        overlay.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        `;

        const expandedImg = document.createElement("img");
        expandedImg.src = img.src;
        expandedImg.alt = img.alt;
        expandedImg.style.cssText = `
            max-width: 90%;
            max-height: 90%;
            object-fit: contain;
            border-radius: 8px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        `;

        overlay.appendChild(expandedImg);
        document.body.appendChild(overlay);

        // Cerrar al hacer clic
        overlay.addEventListener("click", () => {
            document.body.removeChild(overlay);
        });

        // Cerrar con Escape
        const handleEscape = (e: KeyboardEvent) => {
            if (e.key === "Escape") {
                document.body.removeChild(overlay);
                document.removeEventListener("keydown", handleEscape);
            }
        };
        document.addEventListener("keydown", handleEscape);
    } // Cerrar modal al hacer clic fuera de él
    window.onclick = function (event) {
        const modal = document.getElementById("modalDetallesReserva");
        if (event.target === modal) {
            cerrarModalDetallesEvento();
        }
    }; // Exponer funciones globalmente
    window.cerrarModalDetallesEvento = cerrarModalDetallesEvento;
    window.abrirModalDetallesEvento = abrirModalDetallesEvento;

    // Función helper para formatear fechas de manera más amigable
    function formatearFechaAmigable(fecha: Date): string {
        const opciones: Intl.DateTimeFormatOptions = {
            weekday: "long",
            year: "numeric",
            month: "long",
            day: "numeric",
        };
        return fecha.toLocaleDateString("es-ES", opciones);
    }

    // Función helper para calcular días restantes
    function calcularDiasRestantes(fecha: Date): string {
        const hoy = new Date();
        const diferencia = fecha.getTime() - hoy.getTime();
        const dias = Math.ceil(diferencia / (1000 * 3600 * 24));

        if (dias < 0) return "";
        if (dias === 0) return " (Hoy)";
        if (dias === 1) return " (Mañana)";
        return ` (En ${dias} días)`;
    }
