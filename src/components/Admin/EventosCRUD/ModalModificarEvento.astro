                    }
                }

                // Control visual: fin de evento debe ser m√≠nimo 2 d√≠as despu√©s del fin de inscripciones
                if (fechaFinInscripciones) {
                    const minPorFinInscripciones = ajustarFecha(fechaFinInscripciones, 2);
