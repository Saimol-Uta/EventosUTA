<script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
        // Cargar facultades al inicializar la página
        cargarFacultades();

        // Función para cargar la lista de facultades
        async function cargarFacultades() {
            try {
                const response = await fetch("/api/facultades/listar");
                const facultades = await response.json();

                const selector = document.getElementById("selector-facultad");
                selector.innerHTML =
                    '<option value="">-- Seleccionar Facultad --</option>';

                facultades.forEach((facultad) => {
                    const option = document.createElement("option");
                    option.value = facultad.id_fac;
                    option.textContent = facultad.nom_fac;
                    selector.appendChild(option);
                });
            } catch (error) {
                console.error("Error al cargar facultades:", error);
            }
        }

        // Función para cargar datos de una facultad específica
        async function cargarDatosFacultad(idFacultad) {
            if (!idFacultad) {
                document.getElementById("nombreFacultad").value = "";
                document.getElementById("siglasFacultad").value = "";
                document.getElementById("descripcionFacultad").value = "";
                document.getElementById("sitioWebFacultad").value = "";
                document.getElementById("emailFacultad").value = "";
                document.getElementById("telefonoFacultad").value = "";
                document.getElementById("direccionFacultad").value = "";
                document.getElementById("enlaceSoporte").value = "";

                // Limpiar campos de carrusel
                for (let i = 1; i <= 3; i++) {
                    document.getElementById(`tituloCarrusel${i}`).value = "";
                    document.getElementById(`descripcionCarrusel${i}`).value =
                        "";
                }
                return;
            }

            try {
                const { data, error } = await actions.getFacultadById({
                    idFacultad,
                });

                if (error) {
                    mostrarNotificacionError(
                        "Error al cargar los datos de la facultad",
                    );
                    return;
                }

                if (data) {
                    document.getElementById("nombreFacultad").value =
                        data.NOM_FAC || "";
                    document.getElementById("siglasFacultad").value =
                        data.SIG_FAC || "";
                    document.getElementById("descripcionFacultad").value =
                        data.DES_FAC || "";
                    document.getElementById("sitioWebFacultad").value =
                        data.SIT_WEB || "";
                    document.getElementById("emailFacultad").value =
                        data.EMA_FAC || "";
                    document.getElementById("telefonoFacultad").value =
                        data.TEL_FAC || "";
                    document.getElementById("direccionFacultad").value =
                        data.DIR_FAC || "";
                    document.getElementById("enlaceSoporte").value =
                        data.ENL_SOL || "";

                    // Cargar datos del carrusel
                    for (let i = 1; i <= 3; i++) {
                        document.getElementById(`tituloCarrusel${i}`).value =
                            data[`TIT_CARU${i}`] || "";
                        document.getElementById(
                            `descripcionCarrusel${i}`,
                        ).value = data[`DES_CARU${i}`] || "";
                    }
                }
            } catch (error) {
                console.error("Error al cargar facultad:", error);
                mostrarNotificacionError(
                    "Error al cargar los datos de la facultad",
                );
            }
        }

        function crearNuevaFacultad() {
            // Limpiar el formulario
            cargarDatosFacultad("");
            // Cambiar título
            document.querySelector("h1").textContent = "Crear Nueva Facultad";
        }

        async function eliminarFacultad() {
            const selector = document.getElementById("selectorFacultad");
            const idFacultad = selector.value;

            if (!idFacultad) {
                mostrarNotificacionError(
                    "Selecciona una facultad para eliminar",
                );
                return;
            }

            // Confirmar eliminación
            const result = await Swal.fire({
                title: "¿Estás seguro?",
                text: "Esta acción no se puede deshacer",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dc2626",
                cancelButtonColor: "#6b7280",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar",
            });

            if (!result.isConfirmed) return;

            try {
                const { data, error } = await actions.eliminarFacultad({
                    idFacultad,
                });

                if (error) {
                    mostrarNotificacionError(error);
                    return;
                }

                mostrarNotificacionExito("Facultad eliminada exitosamente");
                // Recargar la página después de eliminar
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } catch (error) {
                console.error("Error al eliminar facultad:", error);
                mostrarNotificacionError("Error al eliminar la facultad");
            }
        }

        function showPreview(input, previewId, displayId) {
            const file = input.files[0];
            if (!file) return;

            const previewContainer = document.getElementById(previewId);
            const fileNameDisplay = document.getElementById(displayId);

            // Elimina vista previa anterior
            const existingPreview =
                previewContainer.querySelector(".preview-image");
            if (existingPreview) existingPreview.remove();

            fileNameDisplay.textContent = file.name;
            fileNameDisplay.style.display = "block";

            if (file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const previewImg = document.createElement("img");
                    previewImg.className = "preview-image";
                    previewImg.src = e.target.result;
                    previewImg.alt = "Vista previa";
                    previewContainer.prepend(previewImg);
                };
                reader.readAsDataURL(file);
            }
        }

        document.querySelectorAll(".input-file").forEach((input) => {
            input.addEventListener("change", function () {
                const previewId = this.getAttribute("data-preview");
                const displayId = this.getAttribute("data-name-display");
                if (previewId && displayId) {
                    showPreview(this, previewId, displayId);
                }
            });
        });

        // Hacer funciones disponibles globalmente
        window.cargarDatosFacultad = cargarDatosFacultad;
        window.crearNuevaFacultad = crearNuevaFacultad;
        window.eliminarFacultad = eliminarFacultad;

        // Función para mostrar notificaciones de éxito
        function mostrarNotificacionExito(mensaje) {
            Swal.fire({
                icon: "success",
                title: "¡Éxito!",
                text: mensaje,
                confirmButtonColor: "#059669",
                timer: 2000,
                timerProgressBar: true,
            });
        }

        // Función para mostrar notificaciones de error
        function mostrarNotificacionError(mensaje) {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: mensaje,
                confirmButtonColor: "#dc2626",
            });
        }

        window.mostrarNotificacionExito = mostrarNotificacionExito;
        window.mostrarNotificacionError = mostrarNotificacionError;
    });
</script>
