---
import { guardarContenido } from "@/actions/Admin/update-info.action";

const {
  titulo,
  contenido,
  imagenUrl,
  invertir = false,
  modoEdicion = false,
  columna
} = Astro.props;

const actionResult = Astro.getActionResult();

const success = actionResult?.success ?? null;
const error = actionResult?.error ?? null;
---

<div class={`flex flex-col ${invertir ? 'lg:flex-row-reverse' : 'lg:flex-row'} justify-center items-start gap-6 mx-auto max-w-6xl px-4 py-8`}>
  <div class="w-full max-w-md bg-gray-50 rounded-2xl shadow-md px-6 py-6">
    <div class="text-center font-sans">
      <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-[#650000] mb-4">
        {titulo}
      </h2>

      {modoEdicion ? (
        <form is:action={guardarContenido} class="flex flex-col items-stretch gap-4" method="post">
          <input type="hidden" name="columna" value={columna} />

          <label for={`contenido-${columna}`} class="sr-only">Contenido</label>
          <textarea
            id={`contenido-${columna}`}
            name="contenido"
            class="w-full border border-gray-300 rounded p-2 text-[#010101]"
            rows="6"
            required
          >{contenido}</textarea>

          <button
            class="bg-[#650000] text-white py-2 px-4 rounded hover:bg-[#850000]"
            type="submit"
          >
            Guardar
          </button>

          {success === false && error && (
            <p class="text-red-600 text-sm">{error}</p>
          )}
          {success === true && (
            <p class="text-green-600 text-sm">Guardado correctamente</p>
          )}
        </form>
      ) : (
        <p class="text-base sm:text-lg text-[#010101] leading-relaxed">
          {contenido}
        </p>
      )}
    </div>
  </div>

  <div class="w-full max-w-md flex justify-center items-center">
    <img 
      src={imagenUrl} 
      alt={`Imagen de ${titulo}`} 
      class="rounded-2xl shadow-lg object-cover w-full h-auto max-h-80"
      loading="lazy"
    />
  </div>
</div>
