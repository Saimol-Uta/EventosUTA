---
// TarjetaConImagen.astro
const { titulo, contenido, imagenUrl, invertir = false, admin = false, modoEdicion = false } = Astro.props;
---

<div class={`flex flex-col ${invertir ? 'lg:flex-row-reverse' : 'lg:flex-row'} justify-center items-start gap-6 mx-auto max-w-6xl px-4 py-8`}>
  
  <div class="w-full max-w-md bg-gray-50 rounded-2xl shadow-md px-6 py-6">
    <div class="text-center font-sans">
      <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-[#650000] mb-4">
        {titulo}
      </h2>

      {modoEdicion ? (
        <form method="POST" action="/api/actualizar-tarjeta">
          <textarea
            name="nuevoContenido"
            class="w-full h-40 p-3 border rounded-md resize-none text-[#010101]"
          >{contenido}</textarea>
          <input type="hidden" name="titulo" value={titulo} />
          <button
            type="submit"
            class="mt-4 px-4 py-2 bg-red-800 text-white rounded hover:bg-green-700 transition"
          >
            Guardar cambios
          </button>
        </form>
      ) : (
        <p class="text-base sm:text-lg text-[#010101] leading-relaxed">
          {contenido}
        </p>
      )}

      {admin && !modoEdicion && (
        <form method="GET">
          <input type="hidden" name="modoEdicion" value="true" />
          <button
            type="submit"
            class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
          >
            Editar contenido
          </button>
        </form>
      )}
    </div>
  </div>

  <div class="w-full max-w-md flex justify-center items-center">
    <img 
      src={imagenUrl} 
      class="rounded-2xl shadow-lg object-cover w-full h-auto max-h-80"
    />
  </div>
</div>
