---
import { actions } from "astro:actions";

const {
    titulo,
    contenido,
    imagenUrl,
    invertir = false,
    modoEdicion = false,
    columna,
} = Astro.props;

const result = Astro.getActionResult(actions.updatePaginaPrincipal);
---

<div
    class={`flex flex-col ${invertir ? "lg:flex-row-reverse" : "lg:flex-row"} justify-center items-center gap-8 mx-auto max-w-6xl px-4 py-12`}
>
    <!-- Columna de texto -->
    <div class="w-full max-w-xl font-sans text-center">
        <form
            action={actions.updatePaginaPrincipal}
            method="post"
            enctype="multipart/form-data"
            class="flex flex-col items-center gap-6 w-full"
        >
            {
                modoEdicion ? (
                    <input
                        type="text"
                        name={`titulo-${columna}`}
                        value={titulo}
                        placeholder="TÃ­tulo"
                        class="text-3xl lg:text-4xl font-extrabold text-[#650000] bg-transparent text-center w-full placeholder:text-gray-400 focus:outline-none border-b-2 border-gray-300 pb-1"
                    />
                ) : (
                    <h2 class="text-3xl lg:text-4xl font-extrabold text-[#650000] mb-4 drop-shadow-sm">
                        {titulo}
                    </h2>
                )
            }

            {
                modoEdicion ? (
                    <>
                        <textarea
                            id={`contenido-${columna}`}
                            name={columna}
                            class="w-full bg-transparent p-2 text-lg text-gray-800 focus:outline-none focus:ring-0 resize-none placeholder:text-gray-400"
                            style="border-bottom: 2px solid #ccc;"
                            rows="6"
                            required
                            placeholder="Escribe contenido..."
                        >
                            {contenido}
                        </textarea>

                        <button
                            type="submit"
                            class="bg-[#7c0a0a] text-white text-sm px-4 py-1.5 rounded-full shadow-sm hover:shadow-md hover:brightness-110 transition-all duration-300"
                        >
                            Guardar texto
                        </button>
                    </>
                ) : (
                    <p class="text-lg leading-relaxed text-gray-800 whitespace-pre-line drop-shadow-sm">
                        {contenido}
                    </p>
                )
            }

            {result?.data?.success === false && (
                <p class="text-red-600 text-sm mt-1">{result?.data?.error}</p>
            )}
            {result?.data?.success === true && (
                <p class="text-green-600 text-sm mt-1">{result?.data?.message}</p>
            )}
        </form>
    </div>

    <!-- Columna de imagen -->
    <div class="w-full max-w-xl flex flex-col justify-center items-center gap-4">
        {
            modoEdicion ? (
                <form
                    action={actions.updatePaginaPrincipal}
                    method="post"
                    enctype="multipart/form-data"
                    class="flex flex-col items-center gap-4"
                >
                    <label for="imagen" class="cursor-pointer">
                        <img
                            src={imagenUrl}
                            alt={`Imagen de ${titulo}`}
                            class="rounded-3xl shadow-xl object-cover w-full h-auto max-h-96 transform transition-transform duration-300 hover:scale-105 hover:brightness-105"
                            loading="lazy"
                        />
                    </label>

                    <input
                        type="file"
                        id="imagen"
                        name="imagen"
                        accept="image/*"
                        class="hidden"
                        required
                    />

                    <button
                        type="submit"
                        class="bg-[#7c0a0a] text-white text-sm px-4 py-1.5 rounded-full shadow-sm hover:shadow-md hover:brightness-110 transition-all duration-300"
                    >
                        Guardar imagen
                    </button>
                </form>
            ) : (
                <img
                    src={imagenUrl}
                    alt={`Imagen de ${titulo}`}
                    class="rounded-3xl shadow-xl object-cover w-full h-auto max-h-96"
                    loading="lazy"
                />
            )
        }
    </div>
</div>
