---
import "../styles/global.css";
const { id, nombre, titulo, campo } = Astro.props;
---

<div class="bg-white p-6 rounded-2xl shadow-md w-full max-w-md mx-auto mb-5 transition hover:shadow-xl">
  <label for={id} class="block text-lg font-medium text-gray-800 mb-2">{titulo}</label>
  <input
    id={id}
    name={nombre}
    type="text"
    placeholder={campo}
    required
    class="w-full px-4 py-2 border border-gray-300 rounded-xl text-gray-700 focus:ring-2 focus:ring-red-800 focus:outline-none transition duration-200"
  />
</div>
