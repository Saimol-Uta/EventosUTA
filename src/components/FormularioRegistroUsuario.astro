---
interface Props {
  camposFormulario: {
    titulo: string;
    valor: string;
    name: string;
  }[];
  cedula: string;
  mostrarBotones: boolean;
  textoBotonGuardarInfo: string;
  textoBotonCancelar: string;
  textoBotonMasTarde: string;
  textoBotonAsociar?: string;
}
const {
  camposFormulario,
  cedula,
  mostrarBotones,
  textoBotonGuardarInfo,
  textoBotonCancelar,
  textoBotonMasTarde,
} = Astro.props as Props;

---

<h1>¡Bienvenido!</h1>
<p class="subtitulo">Completa tus datos:</p>

<form method="POST">
  <input type="hidden" name="action" value="guardarInfo" />
  

  <div>
    <label for="ced_usu">Cédula</label>
    <input id="ced_usu" name="ced_usu" required value={cedula} />
  </div>

  <div>
    <label for="nom_usu1">Primer nombre</label>
    <input id="nom_usu1" name="nom_usu1" required />
  </div>

  <div>
    <label for="nom_usu2">Segundo nombre</label>
    <input id="nom_usu2" name="nom_usu2" />
  </div>

  <div>
    <label for="ape_usu1">Primer apellido*</label>
    <input id="ape_usu1" name="ape_usu1" required />
  </div>

  <div>
    <label for="ape_usu2">Segundo apellido</label>
    <input id="ape_usu2" name="ape_usu2" />
  </div>

  <div>
    <label for="fec_nac_usu">Fecha de nacimiento*</label>
    <input id="fec_nac_usu" name="fec_nac_usu" type="date" required />
  </div>

  <div>
    <label for="num_tel_usu">Teléfono*</label>
    <input id="num_tel_usu" name="num_tel_usu" required />
  </div>

  <div>
    <label for="id_car_per">Carrera*</label>
    <input id="id_car_per" name="id_car_per" required />
  </div>

  <button type="submit" class="submit-button">Completar Registro</button>
</form>


<style>
  h1 {
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.25rem;
  }

  .subtitulo {
    font-size: 16px;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  .section-title {
    font-weight: 600;
    color: #1f2937;
    font-size: 18px;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    grid-column: 1 / -1;
  }

  form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem 2rem;
  }

  label {
    display: block;
    font-weight: 500;
    margin-bottom: 6px;
    color: #111827;
  }

  input,
  select {
    width: 100%;
    padding: 12px;
    font-size: 15px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    outline: none;
  }

  input:focus,
  select:focus {
    border-color: #991b1b;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.3);
  }

  .submit-button {
    grid-column: 1 / -1;
    background-color: #991b1b;
    color: white;
    font-size: 16px;
    padding: 14px 40px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.2s ease-in-out;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #7f1d1d;
  }
</style>
