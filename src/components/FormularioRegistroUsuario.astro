---
interface CampoFormulario {
  titulo: string;
  valor: string;
  name: string;
  tipo?: "select"; // por defecto ser치 input de texto si no se indica
  opciones?: { valor: string; texto: string }[]; // solo si tipo === "select"
}

interface Props {
  camposFormulario: CampoFormulario[];
  cedula: string;
  mostrarBotones: boolean;
  textoBotonGuardarInfo: string;
  textoBotonCancelar: string;
  textoBotonMasTarde: string;
  textoBotonAsociar?: string;
}

const {
  camposFormulario,
  cedula,
  mostrarBotones,
  textoBotonGuardarInfo,
  textoBotonCancelar,
  textoBotonMasTarde,
  textoBotonAsociar,
} = Astro.props as Props;
---

<h1>Edici칩n de tu Informaci칩n</h1>
<p class="subtitulo">Completa tus datos:</p>

<form method="POST">
  <input type="hidden" name="action" value="guardarInfo" />

  {camposFormulario.map((campo) => (
    <div>
      <label for={campo.name}>{campo.titulo}</label>

      {campo.tipo === "select" && campo.opciones ? (
  <select name={campo.name} id={campo.name} required>
    <option value="" disabled selected={!campo.valor}>Selecciona una opci칩n</option>
    {campo.opciones.map(op => (
      <option
        value={op.valor}
        selected={op.valor === campo.valor}
      >
        {op.texto}
      </option>
    ))}
  </select>

      ) : (
        <input
          id={campo.name}
          name={campo.name}
          value={campo.valor}
          required={["nom_usu1", "ape_usu1", "fec_nac_usu", "num_tel_usu", "id_car_per"].includes(campo.name)}
          type={campo.name === "fec_nac_usu" ? "date" : "text"}
        />
      )}
    </div>
  ))}

  {mostrarBotones && (
    <div style="grid-column: 1 / -1;">
      <button type="submit" class="submit-button">{textoBotonGuardarInfo}</button>
      <button type="submit" name="action" value="cancelar">{textoBotonCancelar}</button>
      <button type="submit" name="action" value="masTarde">{textoBotonMasTarde}</button>
      {textoBotonAsociar && (
        <button type="submit" name="action" value="asociar">{textoBotonAsociar}</button>
      )}
    </div>
  )}
</form>

<style>
  h1 {
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.25rem;
  }

  .subtitulo {
    font-size: 16px;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem 2rem;
  }

  label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  input, select {
    width: 100%;
    padding: 0.5rem;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .submit-button {
    background-color: #2563eb;
    color: white;
    padding: 0.75rem 1.25rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    margin-right: 1rem;
  }

  .submit-button:hover {
    background-color: #1d4ed8;
  }
</style>
