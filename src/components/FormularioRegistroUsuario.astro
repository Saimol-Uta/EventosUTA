---
interface Props {
  camposFormulario: {
    titulo: string;
    valor: string;
    name: string;
    tipo?: "text" | "select";
    opciones?: { valor: string; texto: string }[];
  }[];
  cedula: string;
  mostrarBotones: boolean;
  textoBotonGuardarInfo: string;
  textoBotonCancelar: string;
  textoBotonMasTarde: string;
  textoBotonAsociar?: string;
}
const {
  camposFormulario,
  cedula,
  mostrarBotones,
  textoBotonGuardarInfo,
  textoBotonCancelar,
  textoBotonMasTarde,
} = Astro.props as Props;

---

<h1>Edicion de tu Informacion</h1>
<p class="subtitulo">Completa tus datos:</p>
<form method="POST">
  <input type="hidden" name="action" value="guardarInfo" />

  {camposFormulario.map((campo) => (
    <div>
      <label for={campo.name}>{campo.titulo}</label>

      {campo.tipo === "select" ? (
        <select id={campo.name} name={campo.name} required>
          <option value="">Seleccione una opci√≥n</option>
          {campo.opciones?.map((op) => (
            <option value={op.valor} selected={campo.valor === op.valor}>
              {op.texto}
            </option>
          ))}
        </select>
      ) : (
        <input
          id={campo.name}
          name={campo.name}
          value={campo.valor}
          required={campo.name !== "nom_usu2" && campo.name !== "ape_usu2"}
          type={campo.name === "fec_nac_usu" ? "date" : "text"}
        />
      )}
    </div>
  ))}

  <button type="submit" class="submit-button">Completar Registro</button>
</form>



<style>
  h1 {
    font-size: 28px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.25rem;
  }

  .subtitulo {
    font-size: 16px;
    color: #4b5563;
    margin-bottom: 2rem;
  }

  .section-title {
    font-weight: 600;
    color: #1f2937;
    font-size: 18px;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    grid-column: 1 / -1;
  }

  form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem 2rem;
  }

  label {
    display: block;
    font-weight: 500;
    margin-bottom: 6px;
    color: #111827;
  }

  input,
  select {
    width: 100%;
    padding: 12px;
    font-size: 15px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    outline: none;
  }

  input:focus,
  select:focus {
    border-color: #991b1b;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.3);
  }

  .submit-button {
    grid-column: 1 / -1;
    background-color: #991b1b;
    color: white;
    font-size: 16px;
    padding: 14px 40px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.2s ease-in-out;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #7f1d1d;
  }
</style>
