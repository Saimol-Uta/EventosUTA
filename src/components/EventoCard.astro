---
import "../styles/global.css";

const {
  imagen,
  titulo,
  resumen,
  horas,
  slug,
  estado,
  modoAdmin = false,
  idEvento,
  esDestacado = false,
} = Astro.props;
---

<div class="card-evento" style="position: relative;" data-titulo={titulo.toLowerCase()}>
  <a href={`/Eventos/${slug}`}>
    <div class="header-fondo">
      <img
        class="fondo-img"
        src={imagen || "/img/logo-fisei.png"}
        alt="Imagen del evento"
      />

      <div class="info-overlay">
        <h3 class="titulo">{titulo}</h3>
        <p class="resumen">{resumen}</p>

        <div class="etiquetas-footer">
          <div class="etiqueta horas">{horas} horas</div>
          {horas === 0 || horas === null ? (
            <div class="etiqueta gratis">Gratis</div>
          ) : (
            <div class="etiqueta precio">${(horas * 1.5).toFixed(2)}</div>
          )}
        </div>

        {estado && <div class="info-extra">Estado: {estado}</div>}
      </div>
    </div>
  </a>

  {modoAdmin && (
    <button
      class={`btn-favorito ${esDestacado ? "activo" : ""}`}
      data-id={idEvento}
      onclick="toggleFavorito(this)"
      title="Marcar como destacado"
    >
      â˜…
    </button>
  )}
</div>

<style>
.card-evento {
  width: 100%;
  height: 360px;
  max-width: 460px;
  aspect-ratio: 16 / 9;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  display: block;
  text-decoration: none;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card-evento:hover {
  transform: translateY(-6px);
  box-shadow: 0 24px 40px rgba(0, 0, 0, 0.2);
}
.header-fondo {
  position: relative;
  width: 100%;
  height: 100%;
}
.fondo-img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}
.info-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 20px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(16px) saturate(160%);
  -webkit-backdrop-filter: blur(16px) saturate(160%);
  border-radius: 18px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  gap: 6px;
}
.titulo {
  font-size: 1.2rem;
  font-weight: 700;
  color: #1e1e1e;
  margin: 0;
}
.resumen {
  font-size: 0.95rem;
  color: #4a4a4a;
  margin: 0;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info-extra {
  font-size: 0.85rem;
  color: #555;
}
.etiqueta {
  margin-top: 6px;
  font-size: 0.8rem;
  font-weight: 600;
  padding: 6px 14px;
  border-radius: 999px;
  display: inline-block;
  width: fit-content;
}
.etiqueta.horas {
  background-color: #e7f1ff;
  color: #1a4f8b;
}
.etiqueta.gratis {
  background-color: #e5fcea;
  color: #1c8f39;
}
.etiqueta.precio {
  background-color: #ffeaea;
  color: #b30000;
}

.btn-favorito {
  background-color: white;
  border-radius: 50%;
  font-size: 20px;
  width: 34px;
  height: 34px;
  color: #bbb;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 10px;
  transition: all 0.2s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.btn-favorito.activo {
  color: gold;
}
</style>
