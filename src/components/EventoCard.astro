---
import "../styles/global.css";
import { Image } from "astro:assets";
const imagenPorDefecto = "https://images.unsplash.com/photo-1559757148-5c350d0d3c56?w=800&h=600&fit=crop";

const { 
    imagen, 
    estado, 
    horas, 
    titulo, 
    slug, 
    modoAdmin = false, 
    idEvento, 
    esDestacado = false 
} = Astro.props;

// ✅ 3. Usamos la imagen del evento, o la de por defecto si no existe
const imagenSrc = imagen || imagenPorDefecto;---

<div class="card" data-titulo={titulo.toLowerCase()} style="position: relative;">
    <a href={`/Eventos/${slug}`}>
        
        <Image
            src={imagenSrc}
            alt={`Imagen del evento: ${titulo}`}
            width={300}
            height={160}
            class="evento-imagen"
            loading="lazy"
            decoding="async"
        />

        <div class="info">
            <div class="row">
                <span>{estado}</span>
                <span>{horas}h</span>
            </div>
            <div class="titulo">{titulo}</div>
        </div>
    </a>

    {modoAdmin && (
        <button
            class={`btn-favorito ${esDestacado ? "activo" : ""}`}
            data-id={idEvento}
            onclick="toggleFavorito(this)"
            title="Marcar como destacado"
        >
            {"★"}
        </button>
    )}
</div>

<style>
.card {
  width: 100%;
  max-width: 300px;
  margin: 0 auto;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  background-color: white;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  font-family: "Segoe UI", sans-serif;
  position: relative;
}
.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15);
}
.card img {
  width: 100%;
  height: 160px;
  object-fit: cover;
}
.info {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}
.row {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #171717;
  font-weight: 500;
}
.titulo {
  color: #8b0000;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.btn-favorito {
  background-color: white;
  border-radius: 50%;
  font-size: 20px;
  width: 34px;
  height: 34px;
  color: #bbb;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 10px;
  transition: all 0.2s ease;
   justify-content: center;  /* centra horizontalmente */
  align-items: center;      /* centra verticalmente */
  text-align: center; 
}

.btn-favorito.activo {
  color: gold;

}


</style>


