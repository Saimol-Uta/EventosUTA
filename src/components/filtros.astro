<style>
  
  .filtros {
    display: flex;
    justify-content: flex-start;
    padding: 0.5rem 1rem;
    background-color: rgb(245, 245, 245);
    position: absolute;
    top: 0;
    left: 0;
  }

  .lista-filtros {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .lista-filtros > li {
    position: relative;
  }

  .btn-filtro {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    background: none;
    border: none;
    font-size: 14px;
    color: rgb(37, 37, 37);
    font-weight: 500;
    cursor: pointer;
    padding: 0.3rem 0.6rem;
    border-radius: 0.3rem;
    transition: color 0.3s ease;
  }

  .icon {
    width: 16px;
    right: -4px;
  }

  .btn-filtro:hover {
    color: rgb(108, 19, 19);
  }

  .btn-filtro:hover .icon {
    fill: rgb(108, 19, 19);
  }

  .submenu {
    display: none;
    position: absolute;
    top: 2.2rem;
    left: 0;
    background-color: white;
    border: 1px solid #ddd;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    list-style: none;
    padding: 0.5rem 1rem;
    z-index: 100;
    min-width: 200px;
  }

  .submenu li {
    padding: 0.4rem 0;
    font-size: 12px;
    color: rgb(107, 114, 128);
    cursor: pointer;
  }

  .submenu li:hover,
  .submenu li.activo {
    color: rgb(108, 19, 19);
  }

  .submenu.show {
    display: block;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".btn-filtro");
    const submenus = document.querySelectorAll(".submenu");

    // Mostrar y ocultar submenús
    buttons.forEach((button) => {
      button.addEventListener("click", (event) => {
        event.stopPropagation();
        const targetId = button.getAttribute("data-target");
        submenus.forEach((menu) => {
          menu.classList.toggle("show", menu.id === targetId);
        });
      });
    });

    document.addEventListener("click", (event) => {
      const target = event.target;
      if (target instanceof HTMLElement) {
        const isButton = target.closest(".btn-filtro");
        const isMenu = target.closest(".submenu");
        if (!isButton && !isMenu) {
          submenus.forEach((menu) => menu.classList.remove("show"));
        }
      }
    });

    // Actualizar URL combinando filtros sin borrar otros
    document.querySelectorAll(".submenu li").forEach((item) => {
      item.addEventListener("click", () => {
        const tipo = item.getAttribute("data-filter-type");
        const valor = item.getAttribute("data-filter-value");

        if (tipo && valor) {
          const url = new URL(window.location.href);
          url.searchParams.set(tipo, valor);
          window.location.href = url.toString();
        }
      });
    });

    // ✅ Marcar visualmente los filtros activos
    const params = new URLSearchParams(window.location.search);
    document.querySelectorAll(".submenu li").forEach((item) => {
      const tipo = item.getAttribute("data-filter-type");
      const valor = item.getAttribute("data-filter-value");
      if (tipo && valor && params.get(tipo) === valor) {
        item.classList.add("activo");
      }
    });
  });
</script>
