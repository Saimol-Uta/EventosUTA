---
import Header from "@components/Header.astro";
import NavBar from "../../components/Navbar.astro";
import MenuAdmin from "../../components/MenuAdministrador.astro";
import Layout from "../../layouts/Layout.astro";
import ModalDetallesInscripcion from "../../components/ModalDetallesInscripcion.astro";
import ModalDetallesPago from "../../components/ModalDetallesPago.astro";
import "../../styles/AprobacionesInscripciones.css";

const links = [
  { label: "Eventos", href: "/" },
  { label: "Usuarios", href: "/perfil" },
  { label: "Organizadores", href: "/historial" },
  { label: "Inscripciones", href: "/historial" },
  { label: "Categorías", href: "/historial" },
  { label: "Carreras", href: "/historial" },
];
---

<Layout>
  <body>
    <head
      ><link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
      />
    </head>
    <Header />
    <NavBar />
    <MenuAdmin links={links} />
    <ModalDetallesInscripcion />
    <ModalDetallesPago />

    <main class="registros">
      <div class="registros-grid">
        <div class="registros-superior">
          <div class="registros-superior-izquierdo">Inscripciones</div>
          <div class="registros-superior-derecho">
            <select name="filtros" id="filtros" class="select-estado">
              <option value="documentacion">Documentación</option>
              <option value="factura">Facturación</option>
            </select>
          </div>
        </div>

        <div class="registros-inferior-titulos">
          <div class="registro-fila">
            <div class="parte-izquierda-registro-encabezado">Nombres</div>
            <div class="parte-izquierda-registro-encabezado">Apellidos</div>
            <div class="parte-izquierda-registro-encabezado">Fecha</div>
            <div class="parte-izquierda-registro-encabezado">Estado</div>
            <div class="parte-derecha-registro-encabezado">Opciones</div>
          </div>
        </div>
        <div class="registros-inferior">
          <div class="registro-fila">
            <div class="parte-izquierda-registro-fila">Manuel Eduardo</div>
            <div class="parte-izquierda-registro-fila">Ramírez Hinostroza</div>
            <div class="parte-izquierda-registro-fila">12/05/2025</div>
            <div class="parte-izquierda-registro-fila">
              Documentación Pendiente
            </div>
            <div class="registro-opciones">
              <button onclick="window.abrirModalDetalles()" title="Verificar Documentación">
                <img
                  class="imagen-boton-registro"
                  src="/img/documento.svg"
                  alt="documento"
                />
              </button>

              <button onclick="window.abrirModalPago()" title="Verificar Factura">
                <img
                  class="imagen-boton-modificar"
                  src="/img/factura.svg"
                  alt="factura"
                />
              </button>
            </div>
          </div>

          
        </div>
      </div>
    </main>
  </body>
</Layout>
