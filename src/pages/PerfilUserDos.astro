---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import FormularioRegistroUsuario from "../components/FormularioRegistroUsuario.astro";

let cedulaIngresada = "";
let mostrarFormulario = false;

const method = Astro.request.method;

if (method === "POST") {
  const formData = await Astro.request.formData();
  cedulaIngresada = formData.get("ced_usu")?.toString() ?? "";
  mostrarFormulario = !!cedulaIngresada;
}
---

<Layout>
  <Header />
  <Navbar />
  <div class="container">
    {mostrarFormulario ? (
      <FormularioRegistroUsuario cedula={cedulaIngresada} />
    ) : (
      <form method="POST" class="cedula-formulario">
        <h1 class="text-xl font-bold mb-1">Validar identidad</h1>
        <p class="subtitulo">Ingresa tu número de cédula para continuar.</p>
        <div class="form-group">
          <label for="ced_usu">Cédula*</label>
          <input id="ced_usu" name="ced_usu" required maxlength="10" inputmode="numeric" />
        </div>
        <button type="submit" class="submit-button">Continuar</button>
      </form>
    )}
  </div>

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f9fafb;
    }

    .container {
      max-width: 960px;
      margin: 4rem auto;
      background-color: white;
      padding: 2rem 3rem;
      border-radius: 12px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
    }

    h1 {
      font-size: 28px;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 0.25rem;
    }

    .subtitulo {
      font-size: 16px;
      color: #4b5563;
      margin-bottom: 2rem;
    }

    .cedula-formulario {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
      justify-content: center;
    }

    .form-group {
      width: 100%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    label {
      display: block;
      font-weight: 500;
      margin-bottom: 6px;
      color: #111827;
    }

    input,
    select {
      width: 100%;
      padding: 12px;
      font-size: 15px;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      outline: none;
    }

    input:focus,
    select:focus {
      border-color: #991b1b;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.3);
    }

    .submit-button {
      background-color: #991b1b;
      color: white;
      font-size: 16px;
      padding: 14px 40px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 600;
      transition: background-color 0.2s ease-in-out;
      margin-top: 1rem;
    }

    .submit-button:hover {
      background-color: #7f1d1d;
    }
  </style>
</Layout>
