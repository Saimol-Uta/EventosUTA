---
import Header from "../components/Header.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Filtros from "../components/filtros.astro";
import ContenedorEventos from "../components/ContenedorEvento.astro";

// Extraer filtros desde la URL
const url = new URL(Astro.request.url);
const filtros = {
  categoria: url.searchParams.get("categoria") || "",
  duracion: url.searchParams.get("duracion") || ""
};

// Extraer n√∫mero de p√°gina, por defecto 1
const page = parseInt(url.searchParams.get("page") || "1", 10);

// N√∫mero de cursos por p√°gina (configurable)
const cursosPorPagina = 6;
---

<Layout>
  <Header />
  <Navbar />
  <Filtros />

  <section class="seccion-principal">
    <h2 class="titulo-seccion">EVENTOS</h2>

    {(filtros.categoria || filtros.duracion) && (
      <div class="filtros-activos">
        <span class="titulo-filtros"> Filtros aplicados:</span>

        {filtros.categoria && (
          <span class="filtro-tag">
            Categor√≠a: <strong>{filtros.categoria}</strong>
            <button class="cerrar-filtro" onclick="quitarFiltro('categoria')">√ó</button>
          </span>
        )}

        {filtros.duracion && (
          <span class="filtro-tag">
            Duraci√≥n: <strong>{filtros.duracion}</strong>
            <button class="cerrar-filtro" onclick="quitarFiltro('duracion')">√ó</button>
          </span>
        )}

        <a href="/cursosCompleto" class="btn-limpiar-filtros">Ver todos los cursos</a>
      </div>
    )}

    <!-- Buscador -->
    <div class="buscador">
      <input type="text" placeholder="Buscar evento" class="input-busqueda" />
      <button class="btn-buscar">üîç</button>
    </div>

    <!-- Eventos filtrados con paginaci√≥n -->
    <ContenedorEventos filtros={filtros} page={page} cursosPorPagina={cursosPorPagina} />

    <!-- Sin resultados (por si quieres mostrarlo manualmente) -->
    <div class="cursos-sin-resultados" style="display: none;">
      <svg class="icono-vacio" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" fill="none">
        <circle cx="32" cy="32" r="30" stroke="#8A1538" stroke-width="3" fill="#fff8f8"/>
        <circle cx="22" cy="24" r="4" fill="#8A1538"/>
        <circle cx="42" cy="24" r="4" fill="#8A1538"/>
        <path d="M22 44c2.5-4 9.5-4 12 0" stroke="#8A1538" stroke-width="2.5" stroke-linecap="round"/>
      </svg>
      <p class="titulo-vacio">¬°Ups! No se encontraron resultados</p>
      <p class="texto-vacio">Prueba buscando otro evento </p>
    </div>
  </section>
</Layout>

<!-- ‚úÖ Estilos -->
<style>
  .seccion-principal {
    padding: 20px 40px;
  }

  .titulo-seccion {
    font-size: 22px;
    color: #a10000;
    margin-bottom: 20px;
  }

  .filtros-activos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    background-color: #f9f9f9;
    padding: 12px 18px;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-bottom: 16px;
    font-size: 0.95rem;
    color: #333;
  }

  .filtro-tag {
    background-color: #fff;
    border: 1px solid #8a1538;
    border-radius: 20px;
    padding: 6px 14px;
    color: #8a1538;
    font-size: 0.85rem;
  }

  .titulo-filtros {
    font-weight: 600;
    color: #5a1e1e;
  }

  .btn-limpiar-filtros {
    margin-left: auto;
    color: #8a1538;
    font-weight: 500;
    text-decoration: none;
    font-size: 0.85rem;
    padding: 6px 12px;
    border-radius: 5px;
    background-color: #f0f0f0;
    transition: background 0.2s ease;
  }

  .btn-limpiar-filtros:hover {
    background-color: #e4e4e4;
  }

  .cerrar-filtro {
    background: none;
    border: none;
    font-size: 14px;
    color: #8a1538;
    margin-left: 8px;
    cursor: pointer;
    padding: 0;
    font-weight: bold;
    line-height: 1;
  }

  .cerrar-filtro:hover {
    color: #c30000;
  }

  .buscador {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;
    gap: 8px;
  }

  .input-busqueda {
    padding: 8px 12px;
    width: 220px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
  }

  .btn-buscar {
    padding: 8px 14px;
    background-color: #a10000;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
  }

  .btn-buscar:hover {
    background-color: #880000;
  }

  .sin-resultados {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  text-align: center;
  color: #333;
  max-width: 100%;
  margin: 0 auto;
  background-color: #fff6f6; 
  border: 1px solid #f3caca;
  border-radius: 12px;
}


  .sin-resultados svg {
    width: 120px;
    height: 120px;
    margin-bottom: 20px;
  }

 .titulo-vacio {
  font-size: 1.2rem;
  font-weight: bold;
  color: #8a1538;
  margin-bottom: 8px;
}

.texto-vacio {
  font-size: 0.95rem;
  color: #444;
}

</style>

<!-- ‚úÖ Script -->
<script src="/js/filtros.js" defer></script>
