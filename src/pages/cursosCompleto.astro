---
import Header from "../components/Header.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Filtros from "../components/filtros.astro";
import ContenedorEventos from "../components/ContenedorEvento.astro";

// üîß Extraer filtros desde la URL
const url = new URL(Astro.request.url);
const filtros = {
  categoria: url.searchParams.get("categoria") || "",
  duracion: url.searchParams.get("duracion") || ""
};
---

<Layout>
  <Header />
  <Navbar />
  <Filtros />

  <section class="seccion-principal">
    <h2 class="titulo-seccion">EVENTOS</h2>

    {(filtros.categoria || filtros.duracion) && (
      <div class="filtros-activos">
        <span class="titulo-filtros"> Filtros aplicados:</span>

        {filtros.categoria && (
          <span class="filtro-tag">
            Categor√≠a: <strong>{filtros.categoria}</strong>
            <button class="cerrar-filtro" onclick="quitarFiltro('categoria')">√ó</button>
          </span>
        )}

        {filtros.duracion && (
          <span class="filtro-tag">
            Duraci√≥n: <strong>{filtros.duracion}</strong>
            <button class="cerrar-filtro" onclick="quitarFiltro('duracion')">√ó</button>
          </span>
        )}

        <a href="/cursosCompleto" class="btn-limpiar-filtros">Ver todos los cursos</a>
      </div>
    )}

    <div class="buscador">
      <input type="text" placeholder="Buscar evento" class="input-busqueda" />
      <button class="btn-buscar">üîç</button>
    </div>

    <!-- ‚úÖ Pasar filtros al componente de eventos -->
    <ContenedorEventos filtros={filtros} />
  </section>
</Layout>

<!-- ‚úÖ Estilos -->
<style>
  .seccion-principal {
    padding: 20px 40px;
  }

  .buscador {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;
    gap: 8px;
  }

  .input-busqueda {
    padding: 8px 12px;
    width: 220px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
  }

  .btn-buscar {
    padding: 8px 14px;
    background-color: #a10000;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
  }

  .btn-buscar:hover {
    background-color: #880000;
  }

  .titulo-seccion {
    font-size: 22px;
    color: #a10000;
    margin-bottom: 20px;
  }

  .filtros-activos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    background-color: #f9f9f9;
    padding: 12px 18px;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-bottom: 16px;
    font-size: 0.95rem;
    color: #333;
  }

  .filtro-tag {
    background-color: #fff;
    border: 1px solid #8a1538;
    border-radius: 20px;
    padding: 6px 14px;
    color: #8a1538;
    font-size: 0.85rem;
  }

  .titulo-filtros {
    font-weight: 600;
    color: #5a1e1e;
  }

  .btn-limpiar-filtros {
    margin-left: auto;
    color: #8a1538;
    font-weight: 500;
    text-decoration: none;
    font-size: 0.85rem;
    padding: 6px 12px;
    border-radius: 5px;
    background-color: #f0f0f0;
    transition: background 0.2s ease;
  }

  .btn-limpiar-filtros:hover {
    background-color: #e4e4e4;
  }

  .cerrar-filtro {
    background: none;
    border: none;
    font-size: 14px;
    color: #8a1538;
    margin-left: 8px;
    cursor: pointer;
    padding: 0;
    font-weight: bold;
    line-height: 1;
  }

  .cerrar-filtro:hover {
    color: #c30000;
  }
</style>

<!-- ‚úÖ Script √∫nico centralizado -->
<script src="/js/filtros.js" defer></script>
