---
import Header from "../components/Header.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Filtros from "../components/filtros.astro";
import ContenedorEventos from "../components/ContenedorEvento.astro";

// üîß Extraer filtros desde la URL
const url = new URL(Astro.request.url);
const filtros = {
  categoria: url.searchParams.get("categoria") || "",
  duracion: url.searchParams.get("duracion") || ""
};
---

<Layout>
  <Header />
  <Navbar />
  <Filtros />

  <section class="seccion-principal">
    <div class="buscador">
      <input type="text" placeholder="Buscar evento" class="input-busqueda" />
      <button class="btn-buscar">üîç</button>
    </div>

    <h2 class="titulo-seccion">EVENTOS</h2>

    <!-- ‚úÖ Mostrar filtros activos -->
    {(filtros.categoria || filtros.duracion) && (
      <div class="filtros-activos">
        <strong>Filtros aplicados:</strong>
        {filtros.categoria && <span class="filtro-tag">Categor√≠a: {filtros.categoria}</span>}
        {filtros.duracion && <span class="filtro-tag">Duraci√≥n: {filtros.duracion}</span>}
        <a href="/cursosCompleto" class="btn-limpiar-filtros">Limpiar filtros</a>
      </div>
    )}

    <!-- ‚úÖ Pasar filtros al componente de eventos -->
    <ContenedorEventos filtros={filtros} />
  </section>
</Layout>

<style>
  .seccion-principal {
    padding: 20px 40px;
  }

  .buscador {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;
    gap: 8px;
  }

  .input-busqueda {
    padding: 8px 12px;
    width: 220px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
  }

  .btn-buscar {
    padding: 8px 14px;
    background-color: #a10000;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
  }

  .btn-buscar:hover {
    background-color: #880000;
  }

  .titulo-seccion {
    font-size: 22px;
    color: #a10000;
    margin-bottom: 20px;
  }

  .filtros-activos {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    color: #444;
  }

  .filtro-tag {
    display: inline-block;
    background-color: #f3f3f3;
    color: #8A1538;
    border-radius: 5px;
    padding: 4px 10px;
    margin-left: 10px;
  }

  .btn-limpiar-filtros {
    margin-left: 10px;
    color: #8A1538;
    text-decoration: underline;
    font-size: 0.9rem;
    cursor: pointer;
  }

  .btn-limpiar-filtros:hover {
    text-decoration: none;
  }
</style>

<script src="/js/buscador.js" defer></script>
