<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        border-bottom: 1px solid #ccc;
        flex-wrap: wrap;
    }

    .logo {
        max-height: 70px;
        width: auto;
    }

    .back-link {
        color: #ad272e;
        font-size: 0.9rem;
        text-decoration: none;
        font-weight: bold;
    }

    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        text-align: center;
    }

    h2 {
        margin-bottom: 2rem;
        color: #333;
    }

    .formulario {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .codigo-label {
        color: #800000;
        font-weight: bold;
    }

    .codigo-input {
        padding: 0.5rem;
        width: 300px;
        max-width: 100%;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }

    .verificar-btn {
        background-color: #a00000;
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
    }

    .verificar-btn:hover {
        background-color: #800000;
    }
    .resultado-container {
        margin-top: 2rem;
        width: 100%;
        max-width: 500px;
        text-align: left;
    }
    .resultado-valido,
    .resultado-invalido {
        padding: 1.5rem;
        border-radius: 8px;
        animation: fadeIn 0.5s ease;
    }
    .resultado-valido {
        background-color: #dff5e1;
        border-left: 5px solid #2e7d32;
    }
    .resultado-valido h4 {
        color: #2e7d32;
        margin-top: 0;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }
    .resultado-valido p {
        margin: 0.5rem 0;
    }
    .resultado-invalido {
        background-color: #ffe4e1;
        border-left: 5px solid #c62828;
        color: #c62828;
        font-weight: bold;
        text-align: center;
    }
    .btn-descargar {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.7rem 1.5rem;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.2s;
    }
    .btn-descargar:hover {
        background-color: #218838;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* RESPONSIVE DESIGN üì± */
    @media (max-width: 600px) {
        .header {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .main-content {
            padding: 1rem;
        }

        .codigo-input {
            width: 100%;
            max-width: 300px;
        }

        .verificar-btn {
            width: 100%;
            max-width: 200px;
        }

        .back-link {
            align-self: flex-end;
            margin-right: 1rem;
        }
    }
</style>

<script>
    import { actions } from "astro:actions";

    type CertificadoVerificado = {
        nombreUsuario: string;
        nombreEvento: string;
        fechaEvento: string;
        eventoId: string;
    };

    const form = document.getElementById("verify-form") as HTMLFormElement;
    const input = document.getElementById("codigo") as HTMLInputElement;
    const button = document.getElementById(
        "verify-button",
    ) as HTMLButtonElement;
    const resultsContainer = document.getElementById("resultado-container");

    form.addEventListener("submit", async (e) => {
        e.preventDefault(); // Evita que la p√°gina se recargue al enviar
        if (!resultsContainer) return;

        const codigo = input.value.trim();
        if (!codigo) return;

        // Feedback visual para el usuario
        button.disabled = true;
        button.textContent = "Verificando...";
        resultsContainer.innerHTML = ""; // Limpiar resultados anteriores

        try {
            // Llamamos a la action de verificaci√≥n en segundo plano
            const result = await actions.verificarCertificado({ codigo });

            if (result.data?.success && result.data.data) {
                const cert: CertificadoVerificado = result.data.data;

                resultsContainer.innerHTML = `
          <div class="resultado-valido">
            <h4>‚úì Certificado V√°lido</h4>
            <p><strong>Participante:</strong> ${cert.nombreUsuario}</p>
            <p><strong>Evento:</strong> ${cert.nombreEvento}</p>
            <p><strong>Fecha del Evento:</strong> ${cert.fechaEvento}</p>
            <a href="/historial-eventos?generarCertificado=${cert.eventoId}" class="btn-descargar">Descargar Certificado</a>
          </div>
        `;
            } else {
                const errorMessage =
                    result.error?.message || "Error desconocido.";
                resultsContainer.innerHTML = `<div class="resultado-invalido"><p>‚ùå ${errorMessage}</p></div>`;
            }
        } catch (error) {
            resultsContainer.innerHTML = `<div class="resultado-invalido"><p>‚ùå Error al conectar con el servidor.</p></div>`;
            console.error(error);
        } finally {
            button.disabled = false;
            button.textContent = "Verificar";
        }
    });
</script>
