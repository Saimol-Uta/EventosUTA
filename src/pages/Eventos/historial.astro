---
// src/components/TarjetaEvento.astro
const { nombre, fecha, calificacion, asistencia, estado, certificadoDisponible } = Astro.props;
---

<style>
  .evento-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 2px solid transparent;
  }

  .evento-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--color-fuerte-uta);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.8rem;
  }

  .card-header h3 {
    font-size: 1.1rem;
    margin: 0;
    font-weight: 700;
    color: #333;
  }

  .badge {
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .completo {
    background-color: #dff5e1;
    color: #2e7d32;
  }

  .incompleto {
    background-color: #ffe4e1;
    color: #c62828;
  }

  .fecha {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.8rem;
  }

  .card-info {
    display: flex;
    justify-content: space-between;
    font-size: 0.95rem;
    margin-bottom: 1rem;
    color: #444;
  }

  .btn-certificado {
    text-align: center;
    background-color: var(--color-fuerte-uta);
    color: white;
    padding: 10px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn-certificado:hover {
    background-color: #a00000;
    transform: scale(1.03);
  }

  .texto-inactivo {
    text-align: center;
    font-size: 0.85rem;
    color: #999;
    font-style: italic;
  }

  @media (max-width: 500px) {
    .card-info {
      flex-direction: column;
      gap: 6px;
    }
  }
</style>

<div class="evento-card">
  <div class="card-header">
    <h3>{nombre}</h3>
    <span class={`badge ${estado === "completo" ? "completo" : "incompleto"}`}>
      {estado === "completo" ? "Completo" : "Incompleto"}
    </span>
  </div>
