---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import ContenedorSimple from "../components/ContenedorSimple.astro";
import "../styles/global.css";


const camposFormulario = [
  {
    titulo: "Descripción del curso",
    descripcion: "Este curso proporciona los fundamentos esenciales para el desarrollo de sitios web modernos, incluyendo HTML, CSS y una introducción a JavaScript. Está diseñado para personas sin experiencia previa que desean iniciarse en el mundo del desarrollo web."
  },
  {
    titulo: "Requisitos para ingresar al grupo",
    descripcion: "• Tener acceso a una computadora con conexión a internet.\n• Contar con una cuenta de correo electrónico activa.\n• Disponibilidad de al menos 5 horas semanales para prácticas.\n• Actitud proactiva y ganas de aprender."
  },
  {
    titulo: "Lugar de celebración",
    descripcion: "Universidad Técnica de Ambato"
  },
  {
    titulo: "Duración",
    descripcion: "40 horas académicas"
  },
  {
    titulo: "Fecha de inicio",
    descripcion: "10 de junio de 2025"
  },
  {
    titulo: "Fecha de finalización",
    descripcion: "28 de junio de 2025"
  },
  {
    titulo: "Organizador",
    descripcion: "Dr. Franklin Mayorga, Decano de la Facultad de Ingeniería en Sistemas, Electrónica e Industrial"
  }
];
---

<Layout>
  <Header />
  <Navbar />
</Layout>


<section style="max-width: 1000px; margin: auto; padding: 2rem; font-family: Arial, sans-serif;">
  <h2 style="text-align: center; margin-bottom: 1rem;">
    Curso: <span style="font-weight: 600;">Introducción al Desarrollo Web</span>
  </h2>

  <p style="text-align: center; color: #555; font-size: 15px; margin-bottom: 2rem;">
    <strong>Categoría del evento:</strong> Tecnología y Desarrollo
  </p>

<div class="flex flex-wrap justify-center gap-6 mb-10">
  {camposFormulario.map(campo => (
    <ContenedorSimple titulo={campo.titulo} descripcion={campo.descripcion} />
  ))}
</div>


  <div style="text-align: center; margin-bottom: 2rem;">
    <a href="#" style="
      background-color: #a00;
      color: white;
      padding: 12px 30px;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s ease;
    ">
      Registrarme en el curso
    </a>
  </div>
</section>