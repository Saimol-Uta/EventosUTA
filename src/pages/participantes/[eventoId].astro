// L√≥gica para obtener participantes del evento espec√≠fico
const { eventoId } = Astro.params;

if (!eventoId) {
    Astro.redirect("/");
}

const { data: inscripcion, error } = await Astro.callAction(
    actions.getByIdInscripcion,
